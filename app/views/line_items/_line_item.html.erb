<% if line_item == @current_item %>
  <tr class= "line-item-highlight" >
<% else %>
  <tr>
<% end %>
  <td> <%= line_item.car.brand %> <%= line_item.car.model %> </td>
  <td class= "quantity" > Hours: <%= line_item.hours %> </td>
  <td class= "price" > <%= number_to_currency(line_item. total_price ) %>
  </td>
</tr>